                timetag.innerHTML = (timevalue - 0.1).toFixed(1);
            else {
                timetag.innerHTML = "Expired";
                clearInterval(interval);
            }
            
        }, 100);

        $(`#buttonstate-payload-data-${dev_id}-${sensor_config.status_key}-${w_id}`).data('id', {
            interval: interval
        });
    }


</script>
