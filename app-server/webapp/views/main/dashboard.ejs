                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                
                                <!------------------------------------------------------------------------------------------------------------------------>

                                <%}else if(config.type == 'Chart'){%>
                                    <div class="card shadow col-md-12 mb-4">
                            
                                        <div
                                            class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
