                                                                        var str = "Widget ID: " + widget_id;
                                                                        $("#widget_id").html(str);
                                                                        document.getElementById(`edit-widget_id`).value = widget_id;
                                                                    }

                                                                    function openDeleteWidgetModal(widget_id) {
                                                                        document.getElementById(`delete-widget_id`).value = widget_id;
