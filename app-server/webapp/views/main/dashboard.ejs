                                                    <div class="col mr-2">
                                                        <div class="text-xs font-weight-bold text-primary text-uppercase text-center">
                                                            <%=boardWidget[j].w_display_name%></div>
                                                        <hr class="sidebar-divider">
                                                        <div class="align-items-center">
                                                            <a class="btn btn-lg btn-<%=config.view['Color of button']%> shadow-sm controller" role="button">
                                                                <span class="text"><%= __('Trigger') %></span>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                <%}else if(config.type == 'Switch 1'){%>
